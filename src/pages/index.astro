---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import RecipeCard from "../components/RecipeCard.astro";
import { getCollection } from "astro:content";

const title = "Assorti.ai — Curated AI, Sorted for You";
const description = "Ready-to-use AI recipes for creators, marketers and entrepreneurs.";

// подгружаем все рецепты (можешь отсортировать как нужно)
const recipes = await getCollection("recipes");
// пример сортировки по полю 'order' (если есть):
// const recipes = (await getCollection("recipes")).sort((a,b)=>(a.data.order??999)-(b.data.order??999));
---

<Layout {title} {description}>
  <Hero />

  <section class="py-10">
    <div class="max-w-6xl mx-auto px-5 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {recipes.map((r) => <RecipeCard recipe={r} />)}
    </div>
  </section>
</Layout>
