---
import Nav from "../components/Nav.astro";
import Hero from "../components/Hero.astro";
import RecipeGrid from "../components/RecipeGrid.astro";
---

<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>AssortiAI — AI Recipes Hub</title>
    <meta name="description" content="AI-хаб с готовыми рецептами для маркетинга, автоматизаций и креатива." />
  </head>
  <body class="bg-zinc-50">
    <header class="sticky top-0 bg-white/80 backdrop-blur border-b border-zinc-100 z-50">
      <Nav />
    </header>

    <main>
      <Hero />
      <RecipeGrid />
    </main>

    <footer class="mx-auto max-w-6xl px-4 py-10 text-center text-sm text-zinc-500">
      © {new Date().getFullYear()} AssortiAI
    </footer>
  </body>
</html>
