---
import Layout from "../../layouts/Layout.astro";
const title = "Assorti.ai — Curated AI, Sorted for You";
const description = "Ready-to-use AI recipes for creators, marketers and entrepreneurs.";
---

<Layout {title} {description}>
  <!-- HERO -->
  <section class="relative pt-16 pb-14">
    <div class="max-w-5xl mx-auto px-5 text-center">
      <h1 class="font-display text-4xl md:text-6xl leading-tight text-secondary">
        Curated AI Recipes, <span class="bg-gradient-to-r from-gradientStart to-gradientEnd bg-clip-text text-transparent">Ready to Ship</span>
      </h1>
      <p class="mt-5 text-lg md:text-xl text-secondary/80">
        Playbooks that actually save time. No fluff — just repeatable workflows.
      </p>

      <div class="mt-8 flex items-center justify-center gap-3">
        <a href="/recipes" class="inline-flex items-center justify-center px-5 py-3 rounded-xl bg-accent text-white font-semibold hover:opacity-90 transition">
          Explore Recipes
        </a>
        <a href="/about" class="inline-flex items-center justify-center px-5 py-3 rounded-xl border border-slate-300 text-secondary hover:bg-slate-50 transition">
          How it works
        </a>
      </div>
    </div>

<!-- Temprory section to check CSS 28-39 -->
<div class="mt-6 p-4 rounded-xl border border-slate-200 test-colors">
  This block should be secondary text on background color.
</div>

<div class="mt-3 p-4 rounded-xl text-white bg-gradient-to-r from-gradientStart to-gradientEnd">
  This block should have a blue→violet gradient.
</div>

<button class="mt-3 px-4 py-2 rounded-lg bg-accent text-white">
  Accent Button
</button>

    <!-- gradient card (пример из п.4) -->
    <div class="max-w-5xl mx-auto mt-12 px-5">
      <div class="rounded-2xl p-6 md:p-8 text-white bg-gradient-to-r from-gradientStart to-gradientEnd shadow-lg">
        <p class="text-lg md:text-xl">Ship your first AI workflow in 15 minutes.</p>
      </div>
    </div>
  </section>

  <!-- PREVIEW GRID (простейший) -->
  <section class="py-10">
    <div class="max-w-6xl mx-auto px-5 grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <article class="border border-slate-200 rounded-2xl p-5 hover:shadow-sm transition">
        <h3 class="font-semibold text-secondary">YouTube Shorts in 10 min</h3>
        <p class="mt-2 text-secondary/70 text-sm">Script → VO → captions → export.</p>
        <a href="/recipes/youtube-shorts-10-min" class="mt-4 inline-block text-primary hover:underline">Open</a>
      </article>

      <article class="border border-slate-200 rounded-2xl p-5 hover:shadow-sm transition">
        <h3 class="font-semibold text-secondary">Podcast Intro (15 min)</h3>
        <p class="mt-2 text-secondary/70 text-sm">Intro script + music bed + mixdown.</p>
        <a href="/recipes/podcast-intro-15-min" class="mt-4 inline-block text-primary hover:underline">Open</a>
      </article>

      <article class="border border-slate-200 rounded-2xl p-5 hover:shadow-sm transition">
        <h3 class="font-semibold text-secondary">Cover for YouTube (Canva)</h3>
        <p class="mt-2 text-secondary/70 text-sm">Thumbnail that actually converts.</p>
        <a href="/recipes/cover-youtube-canva" class="mt-4 inline-block text-primary hover:underline">Open</a>
      </article>
    </div>
  </section>
</Layout>
