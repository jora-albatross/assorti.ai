---
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const recipes = await getCollection("recipes", ({ data }) => data.published !== false);
  return recipes.map((entry) => ({
    params: { slug: entry.data.slug },
    props: { recipe: entry },
  }));
}

const { recipe } = Astro.props;
const { data, body } = recipe;
---

<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <title>{data.title} — AssortiAI</title>
    <meta name="description" content={data.description} />
  </head>
  <body class="bg-zinc-50">
    <main class="mx-auto max-w-3xl px-4 py-10">
      <a href="/recipes/" class="text-sm text-zinc-600 hover:text-black">← Ко всем рецептам</a>

      <header class="mt-3">
        <h1 class="text-3xl font-extrabold">{data.title}</h1>
        <p class="mt-2 text-zinc-600">{data.description}</p>
        <div class="mt-3 text-sm text-zinc-500">
          {data.category && <>Категория: <b>{data.category}</b> · </>}
          {data.eta && <>ETA: <b>{data.eta}</b></>}
        </div>
        {data.cover && <img src={data.cover} alt={data.title} class="mt-4 w-full rounded-xl" />}
      </header>

      <article class="prose prose-zinc mt-8">
        {body ? <Fragment set:html={body} /> : (
          <>
            {data.steps && (
              <>
                <h2>Шаги</h2>
                <ol>
                  {data.steps.map((s) => (
                    <li>
                      <b>{s.title}</b><br />
                      <span>{s.description}</span>
                      {s.tip && <div><i>Совет:</i> {s.tip}</div>}
                    </li>
                  ))}
                </ol>
              </>
            )}

            {data.prompts && (
              <>
                <h2>Готовые промпты</h2>
                <ul>
                  {data.prompts.map((p) => (
                    <li>
                      <b>{p.label}</b>
                      <pre><code>{p.content}</code></pre>
                    </li>
                  ))}
                </ul>
              </>
            )}

            {data.tools && (
              <>
                <h2>Инструменты</h2>
                <ul>
                  {data.tools.map((t) => (
                    <li>
                      {t.affiliate_url
                        ? <a href={t.affiliate_url} target="_blank">{t.name}</a>
                        : t.url
                        ? <a href={t.url} target="_blank">{t.name}</a>
                        : t.name}
                    </li>
                  ))}
                </ul>
              </>
            )}
          </>
        )}
      </article>
    </main>
  </body>
</html>
