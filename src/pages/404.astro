---
import Layout from "../layouts/Layout.astro";
const title = "Page Not Found — Assorti.ai";
const desc = "Sorry, the page you’re looking for doesn’t exist.";
const og = "/img/og/default.png"; // безопасный дефолт
---

<Layout {title} description={desc} ogImage={og}>
  <section class="max-w-3xl mx-auto px-5 py-16 text-center">
    <h1 class="text-3xl md:text-4xl font-display font-bold text-secondary">404 — Not found</h1>
    <p class="mt-3 text-secondary/70">
      The page may have been moved or deleted.
    </p>
    <a
      href="/"
      class="inline-block mt-6 px-6 py-3 rounded-lg bg-primary text-white font-medium hover:bg-primary/90 transition"
    >
      Back to Home
    </a>
  </section>
</Layout>
