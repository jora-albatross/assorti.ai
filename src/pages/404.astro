---
import Layout from "../layouts/Layout.astro";
const title = "Page not found — Assorti.ai";
const description = "The page you’re looking for doesn’t exist.";
---
<Layout {title} {description}>
  <section class="py-24 text-center">
    <h1 class="text-5xl font-semibold">404</h1>
    <p class="mt-3 text-secondary/70">Page not found.</p>

    <div class="mt-8 flex items-center justify-center gap-3">
      <a href="/" class="inline-flex items-center justify-center px-5 py-3 rounded-xl bg-accent text-white font-semibold shadow-sm hover:opacity-90 transition">
        Back to home
      </a>
      <a href="/recipes" class="inline-flex items-center justify-center px-5 py-3 rounded-xl border border-slate-300 text-secondary hover:bg-slate-50 transition">
        Browse recipes
      </a>
    </div>
  </section>
</Layout>
