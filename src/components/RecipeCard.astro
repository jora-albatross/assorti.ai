---
import type { CollectionEntry } from 'astro:content';
const { recipe }:{ recipe: CollectionEntry<'recipes'> } = Astro.props;
const data = recipe.data;
---
<a class="card" href={`/recipes/${recipe.slug}`}>
  <img src={data.preview ?? '/img/placeholder.png'} alt={data.title} width="100%" height="160" loading="lazy" />
  <div class="p">
    <div class="tag">{data.category}</div>
    <div class="tag">{data.eta} min</div>
    <h3 style="margin:8px 0">{data.title}</h3>
    <p class="muted" style="min-height:2.8em">{data.summary}</p>
  </div>
</a>