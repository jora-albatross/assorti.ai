---
import type { CollectionEntry } from 'astro:content';
const { recipe }:{ recipe: CollectionEntry<'recipes'> } = Astro.props;
const d = recipe.data;
---
<a class="card" href={`/recipes/${recipe.slug}`}>
  <img src={d.preview ?? '/img/placeholder.png'} alt={d.title} loading="lazy" />
  <div class="p">
    <div style="display:flex;gap:6px;flex-wrap:wrap">
      <span class="tag">{d.category}</span>
      <span class="tag">{d.eta} min</span>
    </div>
    <h3 style="margin:10px 0 6px;font-size:18px;color:#1d2430">{d.title}</h3>
    <p class="muted" style="min-height:2.6em;margin:0">{d.summary}</p>
  </div>
</a>
