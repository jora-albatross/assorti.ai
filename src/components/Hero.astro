---
import ButtonPrimary from "../components/ButtonPrimary.astro";
import ButtonSecondary from "../components/ButtonSecondary.astro";

interface Props {
  titleLine1?: string;
  titleLine2?: string;
  subtitle?: string;
  primaryLabel?: string;
  primaryHref?: string;
  secondaryLabel?: string;
  secondaryHref?: string;
}

const {
  titleLine1 = "Curated AI Recipes,",
  titleLine2 = "Ready to Ship",
  subtitle = "Playbooks that actually save time. No fluff — just repeatable workflows.",
  primaryLabel = "Explore Recipes",
  primaryHref = "/recipes",
  secondaryLabel = "How it works",
  secondaryHref = "/about",
} = Astro.props as Props;

---

<section class="relative overflow-hidden pt-16 pb-14">
  <div class="max-w-6xl mx-auto px-5 grid gap-10 md:grid-cols-2 items-center">
    
   <!-- ЛЕВАЯ КОЛОНКА -->
<div class="col-span-1 min-w-0 relative z-10">
  <!-- H1: появляется первым -->
  <h1 class="text-4xl sm:text-5xl md:text-6xl font-display font-bold
             bg-gradient-to-r from-gradientStart to-gradientEnd bg-clip-text text-transparent
             animate-fadeInUp delay-100 motion-reduce:animate-none">
    Curated AI Recipes,<br />Ready to Ship
  </h1>

  <!-- Подзаголовок: появляется вторым -->
  <p class="mt-6 text-lg text-slate-600 max-w-xl animate-fadeInUp delay-200 motion-reduce:animate-none">
    Playbooks that actually save time. No fluff — just repeatable workflows.
  </p>

  <!-- Кнопки: по очереди -->
  <div class="mt-6 flex gap-4">
    <a href="/recipes"
       class="px-5 py-3 rounded-lg bg-accent text-white font-semibold hover:shadow-lg transition
              animate-fadeInUp delay-300 motion-reduce:animate-none">
      Explore Recipes
    </a>
    <a href="/about"
       class="px-5 py-3 rounded-lg border border-slate-200 hover:bg-slate-50 transition
              animate-fadeInUp delay-400 motion-reduce:animate-none">
      How it works
    </a>
  </div>
</div>


    <!-- ПРАВАЯ КОЛОНКА -->
    <div class="col-span-1 min-w-0 relative z-0 appear-delay">
      <!-- твоя иллюстрация -->
      <svg><!-- SVG вставь сюда --></svg>
    </div>
  </div>
</section>

<style>
@keyframes heroIn {
  from { opacity: 0; transform: translateY(10px); }
  to   { opacity: 1; transform: translateY(0); }
}
.appear { animation: heroIn .6s ease-out both; }
.appear-delay { animation: heroIn .6s ease-out .12s both; }

@keyframes shine {
  0% { background-position: -200% center; }
  100% { background-position: 200% center; }
}
.animate-gradient-shine {
  background-size: 200% auto;
  animation: shine 6s linear infinite;
}

/* shine на заголовке */
.shine-trigger { position: relative; display: inline-block; }
.shine-trigger::after{
  content:"";
  position:absolute; inset:0;
  background: linear-gradient(120deg, transparent 0%, rgba(255,255,255,.55) 50%, transparent 100%);
  transform: translateX(-120%);
  opacity: 0; pointer-events:none;
  transition: opacity .2s ease-out;
}
.shine-trigger:hover::after{
  opacity: 1;
  animation: shine 1.1s ease-out forwards;
}
@keyframes shine{ from{transform:translateX(-120%)} to{transform:translateX(120%)} }

</style>
